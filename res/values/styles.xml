<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style
        name="mainActivityButton"
        parent="@android:Theme.Holo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:background">@drawable/main_button_theme</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style 
        name="radioButton"
        parent="@android:Theme.Holo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        
    </style>
    
    <style
        name="descriptionText"
        parent="@android:Theme.Holo" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">5sp</item>
    </style>
    
    <style
        name="seekbar"
        parent="@android:Theme.Holo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style
        name="seekbarText"
        parent="@android:Theme.Holo" >
        	<item name="android:layout_width">75sp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:ems">10</item>
            <item name="android:inputType">number</item>
            <item name="android:gravity">center</item>
    </style>
     

</resources>
